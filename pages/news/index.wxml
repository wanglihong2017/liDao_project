<view>
    <van-tabbar active="{{ active }}" fixed="{{false}}" border="{{false}}" active-color="#ed3f14" inactive-color="#495060" bind:change="onChange">
        <van-tabbar-item icon="like-o" dot>赞和收藏</van-tabbar-item>
        <van-tabbar-item icon="contact" dot>新增关注</van-tabbar-item>
        <van-tabbar-item icon="chat-o" dot>评论和@</van-tabbar-item>
    </van-tabbar>
    <view class="details_box" wx:for="{{listComment}}" wx:key="index" bindtap="goDetails">
        <view class="flex-row details_list">
            <view class="head_image">
                <image src="{{item.img}}"></image>
            </view>
            <view class="title_box">
                <view class="official">{{item.officialText}}</view>
                <view class="sub_title">{{item.subText}} {{item.time}}</view>
            </view>
        </view>
        <van-divider />
    </view>
</view>